# BUPT EDU LLM Platform - Environment Configuration
# Copy this file to .env and update the values according to your setup

# ===== Platform Configuration =====
PLATFORM_ENV=development  # development | production
PLATFORM_NAME=BUPT EDU LLM
PLATFORM_VERSION=0.1.0

# ===== Landing Page Configuration =====
LANDING_PAGE_PORT=80
LANDING_PAGE_PATH=/path/to/BUPT_edu_llm/landingpage

# ===== Solar News Crawler Configuration =====
SOLAR_NEWS_ENABLED=true
SOLAR_NEWS_PORT=5000
SOLAR_NEWS_PATH=/solar_news
SOLAR_NEWS_DIR=/path/to/BUPT_edu_llm/solar_news_crawler

# Solar News Crawler specific settings
SOLAR_NEWS_AUTO_START=true
SOLAR_NEWS_WORKERS=4
SOLAR_NEWS_LOG_LEVEL=INFO

# ===== Sentiment Analysis Configuration (Future) =====
# Uncomment when adding sentiment analysis module
# SENTIMENT_ENABLED=false
# SENTIMENT_PORT=5001
# SENTIMENT_PATH=/sentiment
# SENTIMENT_DIR=/path/to/BUPT_edu_llm/sentiment_analysis

# ===== Nginx Configuration =====
NGINX_ENABLED=true
NGINX_CONFIG_PATH=/path/to/BUPT_edu_llm/nginx/bupt_edu_llm.conf
NGINX_LOG_DIR=/var/log/nginx

# ===== Logging Configuration =====
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_DIR=/path/to/BUPT_edu_llm/logs
LOG_MAX_SIZE=10485760  # 10MB in bytes
LOG_BACKUP_COUNT=5

# ===== Health Check Configuration =====
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30  # seconds
HEALTH_CHECK_TIMEOUT=5    # seconds

# ===== Database Configuration (if needed) =====
# DB_TYPE=sqlite  # sqlite | postgresql | mysql
# DB_PATH=/path/to/database.db
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=bupt_edu_llm
# DB_USER=admin
# DB_PASSWORD=your_password_here

# ===== API Keys (if needed) =====
# OPENAI_API_KEY=your_openai_key_here
# GOOGLE_TRANSLATE_API_KEY=your_google_translate_key_here

# ===== Security Configuration =====
SECRET_KEY=change_this_to_a_random_secret_key_in_production
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost,http://127.0.0.1

# ===== Performance Configuration =====
CACHE_ENABLED=true
CACHE_TYPE=simple  # simple | redis | memcached
CACHE_TTL=300      # seconds

# Redis configuration (if using Redis cache)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# ===== Development Configuration =====
DEBUG=false
AUTO_RELOAD=false
FLASK_ENV=production

# ===== Production Configuration =====
# SSL_ENABLED=false
# SSL_CERT_PATH=/path/to/ssl/certificate.crt
# SSL_KEY_PATH=/path/to/ssl/private.key

# ===== Monitoring Configuration =====
# MONITORING_ENABLED=false
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3000
