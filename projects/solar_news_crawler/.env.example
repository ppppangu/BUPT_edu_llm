# Solar News Crawler 配置文件
# 复制此文件为 .env 并填入实际的配置值

# ==== 服务配置 ====
SOLAR_NEWS_HOST=127.0.0.1
SOLAR_NEWS_PORT=5000
SOLAR_NEWS_WORKERS=4
SOLAR_NEWS_LOG_LEVEL=INFO

# ==== 定时任务配置 ====
# 每日执行爬虫的时间（24小时制）
SCHEDULER_HOUR=2
SCHEDULER_MINUTE=0

# ==== AI 总结功能配置 ====
# AI API 基础URL（不要以斜杠结尾）
AI_BASE_URL=https://api.openai.com/v1

# AI API 密钥
AI_API_KEY=your_api_key_here

# AI 模型名称（如: gpt-3.5-turbo, gpt-4）
AI_MODEL=gpt-3.5-turbo
